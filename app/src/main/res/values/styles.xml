<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ratingbar" parent="Widget.MaterialRatingBar.RatingBar">
        <!--<item name="android:minHeight">16dp</item>-->
        <!--<item name="android:maxHeight">16dp</item>-->

        <item name="colorPrimary">#ffd600</item>
        <item name="colorPrimaryDark">#ffd600</item>
        <item name="colorAccent">#ffd600</item>

    </style>


    <style name="dialogButtonBlue" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">@drawable/circle_rectangle_blue_selector</item>
        <!--<item name="android:translationZ">10dp</item>-->
        <!--<item name="android:elevation">10dp</item>-->
        <item name="android:textSize">@dimen/_9ssp</item>
    </style>

    <style name="dialogButtonWhite" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textColor">@color/sky_blue</item>
        <!--<item name="android:background">@drawable/rectangle_rounded_blue_background</item>-->
        <item name="android:textSize">@dimen/_9ssp</item>
    </style>


    <style name="dialogTitle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/gotham_medium</item>
        <item name="android:textColor">@color/_3e3e3e_dialog_title</item>
        <item name="android:textSize">@dimen/_20dp_dialog_title</item>
    </style>

    <style name="dialogText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/gotham_book</item>
        <item name="android:textColor">@color/_232323_dialog_subtext</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textAlignment">center</item>
    </style>


    <style name="BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/TextAppearance.BottomNavigationView.Active
        </item>
        <item name="itemTextAppearanceInactive">
            @style/TextAppearance.BottomNavigationView.Inactive
        </item>
    </style>

    <style name="TextAppearance" />

    <style name="TextAppearance.BottomNavigationView" />

    <style name="TextAppearance.BottomNavigationView.Inactive">
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:textColor">#af616161</item>
        <item name="android:fontFamily">@font/gotham_medium</item>

    </style>

    <style name="TextAppearance.BottomNavigationView.Active">
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/gotham_medium</item>

    </style>

    <style name="tab_text_apeerance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">@dimen/_9ssp</item>
    </style>

</resources>
